    </div>
    <div class="col-md-12 table-bordered">
        <h2>檢測工具參數</h2>
        <div>
            @Html.LabelForModel(Model.MonitorToolParams)
        </div>
    </div>
</div>

@Html.Raw(TempData["GetDetailMsg"])




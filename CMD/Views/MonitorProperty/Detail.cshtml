            @Html.Label("是否啟用簡訊通知", new { Class = "label label-warning" }):
            @Html.LabelForModel(Model.w_sendmessage.ToString())
            <br />
            @Html.LabelFor(m => m.Warn通知群組, new { Class = "label label-warning" }):
            @Html.LabelForModel(Model.Warn通知群組)
            <br />
            @Html.Label("郵件通知上限", new { Class = "label label-warning" }):
            @Html.LabelForModel(Model.w_mail_notify_limit.ToString())
            <br />
            @Html.Label("簡訊通知上限", new { Class = "label label-warning" }):
            @Html.LabelForModel(Model.w_message_notify_limit.ToString())
            <hr />
            <h4>Error通知設定</h4>

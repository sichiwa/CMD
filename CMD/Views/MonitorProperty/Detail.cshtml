@model CMD.v_MonitorProperty_Detail

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p></p>
<p></p>
<div class="container">
    <div class="col-md-12 table-bordered">
        <h2>基本設定</h2>
        <div>
            @Html.LabelFor(m => m.s_no, new { Class = "label label-success" }):
            @Html.LabelForModel(Model.s_no)
            @Html.LabelFor(m => m.環境, new { Class = "label label-success" }):
            @Html.LabelForModel(Model.環境)
            @Html.LabelFor(m => m.分類, new { Class = "label label-success" }):
            @Html.LabelForModel(Model.分類)
            @Html.LabelFor(m => m.系統別, new { Class = "label label-success" }):
            @Html.LabelForModel(Model.系統別)
            <br />
            @Html.Label("監控項目主旨", new { Class = "label label-success" }):
            @Html.LabelForModel(Model.s_subject)
            <br />
            @Html.Label("監控項目內容", new { Class = "label label-success" }):
            @Html.LabelForModel(Model.s_content)
            <br />
            @Html.Label("監控頻率(秒)", new { Class = "label label-success" }):
            @Html.LabelForModel(Model.s_frequency.ToString())
            <br />
            @Html.Label("逾時容忍值(秒)", new { Class = "label label-success" }):
            @Html.LabelForModel(Model.s_timeout.ToString())
            <br />
            @Html.Label("監控項目位置", new { Class = "label label-success" }):
            @Html.LabelForModel(Model.s_position)
            <br />
            @Html.Label("檢測工具同步窗口", new { Class = "label label-success" }):
            @Html.LabelForModel(Model.params_host)
            <br />

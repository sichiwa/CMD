            @Html.Label("是否啟用郵件通知", new { Class = "label label-danger" }):
            @Html.LabelForModel(Model.f_sendmail.ToString())
            <br />
            @Html.Label("是否啟用簡訊通知", new { Class = "label label-danger" }):
            @Html.LabelForModel(Model.f_sendmessage.ToString())
